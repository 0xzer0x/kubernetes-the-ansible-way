frontend kubernetes
    bind {{ ansible_host }}:6443
    option tcplog
    mode tcp
    default_backend kubernetes-controlplane-nodes

backend kubernetes-controlplane-nodes
    mode tcp
    balance roundrobin
    option tcp-check
{% for node in groups['controlplane'] %}
    server {{ node }} {{ hostvars[node]['ansible_host'] }}:6443 check fall 3 rise 2
{% endfor %}
